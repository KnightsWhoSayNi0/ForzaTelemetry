<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="de.henrikkaltenbach.forzatelemetry.telemetry.TelemetryViewModel"/>
        <variable name="telemetry" type="TelemetryViewModel"/>
    </data>
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelBoost"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/boost"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataBoost"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/one_point_two(telemetry.boostBar)}"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitBoost"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/bar"
                    android:textSize="36sp" android:textAlignment="textStart"/>
        </LinearLayout>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelGearDamage"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/gear"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataGear"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{telemetry.gear == 0 ? @string/reverse : @string/integer(telemetry.gear)}"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelRPM"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/rpm"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataRPM"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/four_point_one(telemetry.currentEngineRpm)}"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempFrontLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/front_left"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempFrontLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/three_point_one(telemetry.tireTempFrontLeftCelsius)}"
                    android:textSize="36sp" android:textAlignment="textEnd"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempFrontLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempFrontRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/three_point_one(telemetry.tireTempFrontRightCelsius)}"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempFrontRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempFrontRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/front_right"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempRearLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/rear_left"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempRearLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/three_point_one(telemetry.tireTempRearLeftCelsius)}"
                    android:textSize="36sp" android:textAlignment="textEnd"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempRearLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempRearRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/three_point_one(telemetry.tireTempRearRightCelsius)}"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempRearRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempRearRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/rear_right"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/labelPosition"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:text="@string/position"
                        android:textSize="36sp"/>
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/labelPositionX"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@string/positionX"
                        android:textSize="36sp"/>
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/labelPositionY"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@string/positionY"
                        android:textSize="36sp"/>
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/labelPositionZ"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@string/positionZ"
                        android:textSize="36sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/unitPosition"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@{telemetry.sector}"
                        android:textSize="36sp"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/dataPositionX"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@{@string/five_point_two(telemetry.positionX)}"
                        android:textSize="36sp" android:textAlignment="textEnd"/>
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/dataPositionY"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@{@string/five_point_two(telemetry.positionY)}"
                        android:textSize="36sp" android:textAlignment="textEnd"/>
                <TextView
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/dataPositionZ"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:text="@{@string/five_point_two(telemetry.positionZ)}"
                        android:textSize="36sp" android:textAlignment="textEnd"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/test1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="Distance"
                    android:textSize="36sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/test2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/five_point_two(telemetry.distanceTraveled)}"
                    android:textAlignment="textEnd"
                    android:textSize="36sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>