<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="de.henrikkaltenbach.forzatelemetry.viewmodels.TelemetryViewModel"/>
        <import type="de.henrikkaltenbach.forzatelemetry.viewmodels.CalculatedViewModel"/>
        <variable name="telemetry" type="TelemetryViewModel"/>
        <variable name="calculated" type="CalculatedViewModel"/>
    </data>
    <!-- Root layout element. -->
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataSector"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@{calculated.sector}"
                    android:textSize="36sp"
                    android:textColor="@{calculated.sector.equals(@string/no_sector) ? @color/red : @color/white}"
                    android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelBoost"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/boost"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataBoost"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/format_f3p2(telemetry.boostBar)}"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitBoost"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/bar"
                    android:textSize="24sp"
                    android:textAlignment="textStart"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelGear"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/gear"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataGear"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{telemetry.gear == 0 ? @string/reverse : @string/format_d(telemetry.gear)}"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelRpm"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/rpm"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataRpm"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/format_f5p1(telemetry.currentEngineRpm)}"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitRpm"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/rpm"
                    android:textSize="24sp"
                    android:textAlignment="textStart"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempFrontLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/front_left"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempFrontLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/format_f5p2(telemetry.tireTempFrontLeftCelsius)}"
                    android:textSize="30sp"
                    android:textAlignment="textEnd"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempFrontLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="24sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempFrontRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/format_f5p2(telemetry.tireTempFrontRightCelsius)}"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempFrontRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="24sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempFrontRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/front_right"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempRearLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/rear_left"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempRearLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/format_f5p2(telemetry.tireTempRearLeftCelsius)}"
                    android:textSize="30sp"
                    android:textAlignment="textEnd"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempRearLeft"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="24sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataTireTempRearRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@{@string/format_f5p2(telemetry.tireTempRearRightCelsius)}"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitTireTempRearRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/celsius"
                    android:textAlignment="textStart"
                    android:textSize="24sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelTireTempRearRight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/rear_right"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelDistanceTraveledLap"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/distance"
                    android:textSize="30sp"/>

            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataDistanceTraveledLap"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="@{@string/format_f8p2(telemetry.distanceTraveledLap)}"
                    android:textSize="30sp"
                    android:textAlignment="textEnd"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/unitDistanceTraveledLap"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/meter"
                    android:textAlignment="textStart"
                    android:textSize="24sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelPositionX"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/positionX"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataPositionX"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="@{@string/format_f6p2(telemetry.positionX)}"
                    android:textSize="30sp"
                    android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelPositionY"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/positionY"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataPositionY"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="@{@string/format_f6p2(telemetry.positionY)}"
                    android:textSize="30sp"
                    android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/labelPositionZ"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="@string/positionZ"
                    android:textSize="30sp"/>
            <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/dataPositionZ"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="@{@string/format_f6p2(telemetry.positionZ)}"
                    android:textSize="30sp"
                    android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </TableLayout>
</layout>