<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="telemetry"
                type="de.henrikkaltenbach.forzatelemetry.viewmodels.TelemetryViewModel"
        />
        <variable
                name="calculated"
                type="de.henrikkaltenbach.forzatelemetry.viewmodels.CalculatedViewModel"
        />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_width="match_parent">

        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvSector"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@{calculated.sector}"
                android:textAlignment="center"
                android:textColor="@{calculated.sector.equals(@string/no_sector) ? @color/red : @color/white}"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvDistance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/distance"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSector"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvDistanceTraveledTotal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@{@string/format_f8p2(telemetry.distanceTraveledTotal)}"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/tvMeter"
                app:layout_constraintTop_toBottomOf="@+id/tvSector"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvMeter"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/meter"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDistanceTraveledTotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSector"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvInLap"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/in_lap"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/tvDistance"
                app:layout_constraintTop_toBottomOf="@+id/tvDistance"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvDistanceTraveledLap"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@{@string/format_f8p2(telemetry.distanceTraveledLap)}"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/tvMeter2"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledTotal"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvMeter2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/meter"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDistanceTraveledLap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledTotal"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvX"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:text="@string/positionX"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledLap"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvPositionX"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@{@string/format_f6p2(telemetry.positionX)}"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/tvX"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledLap"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvY"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:text="@string/positionY"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/tvPositionX"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledLap"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvPositionY"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@{@string/format_f6p2(telemetry.positionY)}"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/tvY"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledLap"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvZ"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:text="@string/positionZ"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/tvPositionY"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledLap"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/tvPositionZ"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@{@string/format_f6p2(telemetry.positionZ)}"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/tvZ"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTraveledLap"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>